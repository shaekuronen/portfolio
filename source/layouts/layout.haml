!!!
%html.no-js{lang: "en"}
  %head

    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/

    / Use title if it's in the page YAML frontmatter
    %title= data.page.title || "The Middleman"

    = stylesheet_link_tag "app", "style"
    = javascript_include_tag "modernizr"

  %body{class: page_classes}
    = yield
    = javascript_include_tag  "../bower_components/jquery/dist/jquery.min.js"
    = javascript_include_tag  "../bower_components/flexslider/jquery.flexslider-min.js"
    = javascript_include_tag  "../bower_components/flexloader/dist/jquery.flexloader.min.js"
    = javascript_include_tag  "all"
